                isTitleValid() {
                    let bTitle = this.titles.includes(this.$refs.title.value);
                    this.errors.title =
                        bTitle === false ? "Veuillez renseigner votre titre" : "";
                    return bTitle;
                },
                isUserNameValid() {
                    const regexUserName = new RegExp(
                        /^([a-z]+(( |')[a-z]+)*)+([-]([a-z]+(( |')[a-z]+)*)+)*$/,
                        "iu"
                    );
                    let bUserName = regexUserName.test(this.form.userName);
                    this.errors.userName =
                        bUserName === false ? "Veuillez renseigner votre nom" : "";
                    return bUserName;
                },
                isEmailValid() {
                    const regexEmail = new RegExp(
                        /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,5})+$/,
                        "iu"
                    );
                    let bEmail = regexEmail.test(this.form.email);
                    this.errors.email =
                        bEmail === false ? "Veuillez renseigner votre email" : "";
                    return bEmail;
                },
                isPhoneValid() {
                    const regexPhone = new RegExp(
                        /^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$/,
                        "im"
                    );
                    let bPhone = regexPhone.test(this.form.phone);
                    this.errors.phone =
                        bPhone === false ? "Veuillez renseigner votre téléphone" : "";
                    return bPhone;
                },
                isCompanyNameValid() {
                    const regexCompanyName = new RegExp(
                        /^([a-z]+(( |')[a-z]+)*)+([-]([a-z]+(( |')[a-z]+)*)+)*$/,
                        "iu"
                    );
                    let bCompanyName = regexCompanyName.test(this.form.companyName);
                    this.errors.companyName =
                        bCompanyName === false ? "Veuillez renseigner votre entreprise" : "";
                    return bCompanyName;
                },
                isRGPDvalid() {
                    const bConsent = this.$refs.consent.checked == true;
                    this.errors.consent =
                        bConsent === false ? "Veuillez accepter les conditions légales" : "";
                    return bConsent;
                },
                notEmpty(field) {
                    return this.form[field] !== "";
                },
            },
        };
