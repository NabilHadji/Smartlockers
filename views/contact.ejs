            methods: {
                async submitForm() {
                    if (
                        this.notEmpty("title") &&
                        this.isTitleValid() &&
                        this.notEmpty("userName") &&
                        this.isUserNameValid() &&
                        this.notEmpty("email") &&
                        this.isEmailValid() &&
                        this.notEmpty("phone") &&
                        this.isPhoneValid() &&
                        this.notEmpty("companyName") &&
                        this.isCompanyNameValid &&
                        this.isRGPDvalid()
                    ) {
                        this.sendForm();
                    }
                },

                async sendForm() {
                    const Data = {
                        title: this.form.title,
                        user_name: this.form.userName,
                        email: this.form.email,
                        phone: this.form.phone,
                        entreprise_name: this.form.companyName,
                        cashier_system: this.form.externalSoftware,
                        how_know: this.form.howknow,
                        web_site: this.form.webSite,
                        rcs: this.form.RCS,
                        address: this.form.address,
                        zip_code: this.form.zipCode,
                        city: this.form.city,
                        country: this.form.country,
                        branche: this.form.service,
                        location: this.form.placement,
                        payment_terminal: this.form.paymentTerminal,
                    };
                    const ip = await this.$axios.$post(
                        "https://api.dev.smartlockers.io/api/v2.0/prospect",
                        Data, {
                            headers: {
                                accept: "application/json" /*'Content-Type': 'application/x-www-form-urlencoded'*/ ,
                            },
                        }
                    );
                    if (this.submitForm == true) return "merci";
                    else return "erreur";
